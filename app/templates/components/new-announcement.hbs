{{#if addNewAnnouncement}}
  <h1>New announcement</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="title">Title</label>
        {{input value=title id="title"}}
      </div>
      <div class="form-group">
        <label for="description">Description</label>
        {{input value=description id="description"}}
      </div>
      <button {{action 'save1'}}>Save</button>
    </form>
  </div>

{{else}}
  <button {{action 'announcementFormShow'}}>Add New Announcement</button>
{{/if}}
