{{#if updateAnnouncementForm}}
  <h4>Update Announcement: "{{announcement.title}}"</h4>
  <div class="">
    <form class="">
      <div class="form-group">
        <label for="title">Title</label>
        {{input value=title id="title" placeholder=announcement.title}}
      </div>
      <div class="form-group">
        <label for="description">Description</label>
        {{input value=description id="description" placeholder=announcement.description}}
      </div>
      <button {{action 'update' announcement}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'updateAnnouncementForm'}}>Update</button>
{{/if}}
